                <script>
                    function confirmRemoveOffer(proId) {
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, delete it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                fetch(`/admin/remove-product-offer?id=${proId}`, {
                                    method: 'GET'
                                })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        Swal.fire(
                                            'Deleted!',
                                            data.message,
                                            'success'
                                        ).then(() => {
                                            window.location.reload(); // Reload the page to reflect changes
                                        });
                                    } else {
                                        Swal.fire(
                                            'Error!',
                                            data.message,
                                            'error'
                                        );
                                    }
                                })
                                .catch(error => {
                                    Swal.fire(
                                        'Error!',
                                        'Failed to remove offer.',
                                        'error'
                                    );
                                });
                            }
                        });
                    }
                </script>

                <div class="col-md-3">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-3">Add Category Offer</h5>


                            <form action="" method="post">
                                <div class="mb-4">
                                    <label for="order_id" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="order_id" name="name">
                                </div>
                                <div class="mb-4">
                                    <label for="order_customer" class="form-label">Offer Percentage</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="order_customer" name="offerPercentage">
                                </div>

                               
                                <div class="mb-4">
                                    <label class="form-label">Select Product</label>
                                    <select class="form-select" name="product">
                                        <option>Product</option>
                                        <% products.forEach(x => { %>
                                            <option><%= x.product_name %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="mb-4">
                                    <label for="order_total" class="form-label">Validity</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="order_total" name="validity">
                                </div>
                            
                                <div class="d-grid">
                                    <button class="btn btn-primary" type="submit" onclick="addOffer(event)" >Add Offer</button>
                                </div>
                            </form>

                        </div>

                        <script>
                            async function addOffer(event) {
                                event.preventDefault(); // Prevent form submission
                                const name = document.getElementById('order_id').value;
                                const offerPercentage = document.getElementById('order_customer').value;
                                const product = document.querySelector('select[name="product"]').value;
                                const validity = document.getElementById('order_total').value;
                        
                                if (!name || !offerPercentage || !product || !validity) {

                                // Check if any field is empty
                                Swal.fire({
                                    title: 'Error',
                                    text: 'Please fill all fields.',
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                                return;
                                 }
                                try {

                                    console.log('hiiiiiiiiiiiiiiii')
                                    const response = await fetch('/admin/product-offer', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify({ name, offerPercentage, product, validity })

                                       
                                    });
                        
                                    if (!response.ok) {
                                        throw new Error('Failed to add offer1111111');
                                    }
                        
                                    const data = await response.json();
                                    console.log(data,'datssssssssssss')
                        
                                    if (data.success) {

                                        console.log('hiiiiiiiiiiiiiiii',data)

                                        // Offer added successfully
                                        Swal.fire({
                                            title: 'Success',
                                            text: 'Offer added successfully',
                                            icon: 'success',
                                            confirmButtonText: 'OK'
                                        }).then(() => {
                                            // Optional: Redirect to another page or reload current page
                                            // window.location.href = '/admin/offer-page';
                                            window.location.reload(); // Reload current page
                                        });
                                    } else {
                                        throw new Error(data.message || 'Failed to add offer22222222');
                                    }
                                } catch (error) {
                                    Swal.fire({
                                        title: 'Error',
                                        text: error.message || 'Failed to add offer333333333',
                                        icon: 'error',
                                        confirmButtonText: 'OK'
                                    });
                                }
                            }
                        </script>
                        



