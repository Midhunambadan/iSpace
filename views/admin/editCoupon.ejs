        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Edit Coupon</h2>
                    <p>Edit coupons</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <%if(locals.coupon){%>
                                <form method="post" onsubmit="updateCoupon(event)">
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Name</label>
                                        <input value="<%=coupon.name%>" name="name" type="text" placeholder="Type here" class="form-control" id="product_name" />
                                    </div>
                                    <div class="mb-4">
                                        <label for="product_slug" class="form-label">Code</label>
                                        <input value="<%=coupon.code%>" name="code" type="text" placeholder="Type here" class="form-control" id="code" />
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Discount Percentage</label>
                                        <input value="<%=coupon.discountpercentage%>" name="discountpercentage" type="number" placeholder="Type here" class="form-control" id="discount" />
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Minimum Amount</label>
                                        <input value="<%=coupon.minimumAmount%>" name="minimumAmount" type="number" placeholder="Type here" class="form-control" id="minAmount" />
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Validity</label>
                                        <input value="<%=coupon.validUntil%>" name="validUntil" type="text" placeholder="Select Date" class="form-control" id="validity" />
                                    </div>
                                    <div class="d-grid">
                                        <button class="btn btn-primary" type="submit">Update Coupon</button>
                                    </div>
                                </form>
                            <%}%>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                async function updateCoupon(event) {
                    event.preventDefault();
                    const form = event.target;
                    const formData = new FormData(form);
                    const formObject = {};
                    formData.forEach((value, key) => {
                        formObject[key] = value;
                    });
        
                    try {
                        const response = await fetch('/admin/edit-coupon', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(formObject)
                        });
        
                        const result = await response.json();
        
                        if (response.ok) {
                            Swal.fire({
                                title: 'Success!',
                                text: result.message,
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then(() => {
                                window.location.href = '/admin/load-coupon';
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: result.message || 'An error occurred while updating the coupon.',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred while updating the coupon.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                }
            </script>

        </section>
