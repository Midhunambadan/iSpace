                                    <% } else { %>
                                        <button type="button" class="btn btn-primary btn-sm block-btn" data-id="<%= users[i]._id %>" onclick="confirmUnblock('<%= users[i]._id %>')">Unblock</button>
                                    <% } %>
                                </td>
                                
                            </tr>
                            <% } %>
                            <% } else { %>
