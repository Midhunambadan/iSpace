    <script>
        function confirmBlock(userId) {
    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, Block it!"
    }).then((result) => {
        if (result.isConfirmed) {
                // window.location.href="/admin/userlist" // Reload the page
            fetch(`/admin/block-user?id=${userId}`, {
                method: 'GET',
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to block user');
                }
                window.location.href="/admin/userlist" // Reload the page

                return response.json();
            })
            // .then(data => {
            //     console.log('User blocked successfully:', data);
            //     Swal.fire({
            //         title: "Blocked!",
            //         text: "The user has been blocked.",
            //         icon: "success"
            //     }).then(() => {
            //         window.location.reload(); // Reload the page
            //     });
            // })
            .catch(error => {
                console.error('Error blocking user:', error);
            });
        }
    });
}

function confirmUnblock(userId) {
    Swal.fire({
        title: "Are you sure?",
        text: "You want to unblock this user?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, Unblock it!"
    }).then((result) => {
        if (result.isConfirmed) {
            // window.location.reload();
            fetch(`/admin/unblock-user?id=${userId}`, {
                method: 'GET',
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to unblock user');
                }
                window.location.href="/admin/userlist" // Reload the page

                return response.json();
            })
            // .then(data => {
            //     console.log('User unblocked successfully:', data);
            //     Swal.fire({
            //         title: "Unblocked!",
            //         text: "The user has been unblocked.",
            //         icon: "success"
            //     }).then(() => {
            //         window.location.reload(); // Reload the page
            //     });
            // })
            .catch(error => {
                console.error('Error unblocking user:', error);
            });
        }
    });
}

