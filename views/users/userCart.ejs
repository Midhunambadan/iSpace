<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.qty-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            const row = btn.closest('tr');
            const productId = row.dataset.productid;
            const qtyVal = document.getElementById(`qty_${productId}`);
            const qty = parseInt(qtyVal.textContent);
            const unitPrice = parseFloat(row.querySelector('.price').textContent);
            const subtotal = row.querySelector('.subtotal');
            let newQty = qty;

            if (btn.classList.contains('qty-up')) {
                newQty++;
            } else if (btn.classList.contains('qty-down')) {
                newQty = Math.max(1, newQty - 1);
            }

            
            qtyVal.textContent = newQty;
            subtotal.textContent = (unitPrice * newQty).toFixed(2);

            // Update localStorage with the new quantity
            localStorage.setItem(`cartItem_${productId}`, newQty);
        });
    });

    // Restore quantities and subtotals from localStorage on page load
    document.querySelectorAll('.qty-val').forEach(qtyVal => {
        const productId = qtyVal.id.split('_')[1];
        const storedQty = localStorage.getItem(`cartItem_${productId}`);
        if (storedQty) {
            qtyVal.textContent = storedQty;
            const row = qtyVal.closest('tr');
            const unitPrice = parseFloat(row.querySelector('.price').textContent);
            const subtotal = row.querySelector('.subtotal');
            subtotal.textContent = (unitPrice * parseInt(storedQty)).toFixed(2);
        }
    });
});

</script>
