<script>
function updateQuantity(productId, change) {
    const quantityElement = document.getElementById('qty_' + productId);
    const subtotalElement = document.getElementById('subtotal_' + productId);
    let quantity = parseInt(quantityElement.innerText);
    let subtotal = parseFloat(subtotalElement.innerText.replace('₹', ''));
    quantity += change;
    if (quantity >= 1) {
        quantityElement.innerText = quantity;
        subtotalElement.innerText = '₹' + ((subtotal / (quantity - change)) * quantity).toFixed(2);
        // updateCart(productId, quantity); // we changed 
