<script>
    function increase(productId,productPrice) {
    fetch('/update-cart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            productId: productId,
            quantity: 1 // Increase by 1
        })
    })
  
    .then(response => {
        console.log(response)
        if (response.ok) {
            // Update the frontend display
            let grandTotal = document.getElementById('grandTotal').innerText
            let sum = Number(grandTotal) + Number(productPrice)
            console.log(grandTotal,productPrice,sum)
            console.log(typeof grandTotal , typeof productPrice ,typeof sum)
            document.getElementById('grandTotal').innerText  = sum
            updateQuantity(productId, 1);
            return response.json()
        } else {
            console.error('Failed to update cart');
            return response.json()
        }
    })  .then((res) => {
        console.log(res);
        if (res.message === 'Cart updated successfully') {
            toastr.success(res.message);
        } else {
            toastr.error(res.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        toastr.error(error.message);
    });
}
function decrease(productId ,productPrice) {
    const quantityElement = document.getElementById('qty_' + productId);
    let quantity = parseInt(quantityElement.innerText);
    if (quantity > 1) {
        fetch('/update-cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productId: productId,
                quantity: -1 // Decrease by 1
            })
        })
        .then(response => {
            console.log(response)
            console.log("workeddggggggggggggggggggggggggg")
            let grandTotal = document.getElementById('grandTotal').innerText
            console.log("GrandTotal :",grandTotal)
            console.log("product price  :",productPrice)
            let sum = Number(grandTotal) - Number(productPrice)
            console.log(typeof grandTotal , typeof productPrice ,typeof sum)
            document.getElementById('grandTotal').innerText  = sum
            let grandTotal1= document.getElementById('grandTotal').innerText
            console.log(sum,grandTotal1)
            if (response.ok) {
                // Update the frontend display

                updateQuantity(productId, -1);
            } else {
                console.error('Failed to update cart');
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
}

